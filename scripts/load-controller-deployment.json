{
    "apiVersion": "extensions\/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "load-controller",
            "version": "latest"
        },
        "name": "load-controller",
        "namespace": "hyperpilot"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "load-controller",
                "version": "latest"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "load-controller",
                    "version": "latest"
                }
            },
            "spec": {
                "nodeSelector": {
                    "hyperpilot/node-id": "1"
                },
                "containers": [
                    {
                        "image": "hyperpilot/slow-cooker-load-controller",
                        "name": "load-controller",
                        "args": [
                            "--slow-cooker-host",
                            "http://slow-cooker.default.svc.cluster.local:8089",
                            "--host",
                            "http://goddd.default.svc.cluster.local:8080"
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "64.0m",
                                "memory": "100Mi"
                            }
                        },
                        "imagePullPolicy": "Always"
                    }
                ]
            }
        }
    }
}
